    <script>

        // console.log("")
        const imgbtn = document.querySelector(".go")
        const form = document.querySelector("form")
        const datetime = document.querySelector("#datetime");

        let day = new Date().getDate();
        if (day < 10){
          day = `0${day}`
        }
        let month = new Date().getMonth() + 1 
        if (month < 10){
          month = `0${month}`
        }

        let year = new Date().getFullYear();

        let hour = new Date().getHours()
        if (hour < 10){
          hour = `0${hour}`
        }
        let minutes = new Date().getMinutes()
        if (minutes < 10){
          minutes = `0${minutes}`
        }

        datetime.textContent = `${hour}:${minutes} on ${month}-${day}-${year}`
        window.onload = ()=>{
        const actionattribute =     form.getAttribute("action")
        console.log(actionattribute)

        form.setAttribute("action", actionattribute + `&leadid=${document.querySelector("#leadid_token").value}`)
        }
        imgbtn.addEventListener("click", ()=>{
            console.log("image clicked")
            if(document.querySelector("#leadid_tcpa_disclosure").checked == false){
              return alert("Please check the box")
            }

            setTimeout(()=>{         
            form.submit()
        },200)
        })

    </script>
